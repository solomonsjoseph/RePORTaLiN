# ============================================================================
# RePORTaLiN - Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control (already in .gitignore)
#
# Usage:
#   1. Copy: cp .env.example .env
#   2. Edit .env with your actual API keys and configuration
#   3. Never share your .env file publicly
#
# Last Updated: January 12, 2025

# ============================================================================
# LLM Configuration (REQUIRED - User Must Provide)
# ============================================================================
# RePORTaLiN does NOT include any built-in LLM functionality.
# You MUST provide your own LLM API key or endpoint below.

# LLM Provider Selection
# ----------------------
# Options: openai, anthropic, google, ollama, custom
# Choose ONE provider at a time
LLM_PROVIDER=openai

# OpenAI Configuration (ChatGPT, GPT-4, GPT-3.5)
# ----------------------------------------------
# Get your API key from: https://platform.openai.com/api-keys
# Documentation: https://platform.openai.com/docs/api-reference
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2048
# OPENAI_BASE_URL=https://api.openai.com/v1  # Optional: Custom endpoint

# Anthropic Configuration (Claude 3.5, Claude 3)
# -----------------------------------------------
# Get your API key from: https://console.anthropic.com/
# Documentation: https://docs.anthropic.com/claude/reference/getting-started-with-the-api
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_MAX_TOKENS=2048

# Google Gemini Configuration
# ----------------------------
# Get your API key from: https://makersuite.google.com/app/apikey
# Documentation: https://ai.google.dev/gemini-api/docs
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_MODEL=gemini-1.5-pro
GOOGLE_TEMPERATURE=0.7
GOOGLE_MAX_TOKENS=2048

# Ollama Configuration (Local Open-Source Models)
# ------------------------------------------------
# Install Ollama from: https://ollama.ai/
# Documentation: https://github.com/ollama/ollama/blob/main/docs/api.md
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=2048
# Example models: llama2, mistral, mixtral, neural-chat, starling-lm

# Custom OpenAI-Compatible API
# -----------------------------
# For custom endpoints compatible with OpenAI API format
CUSTOM_API_KEY=your-custom-api-key-here
CUSTOM_BASE_URL=https://your-custom-endpoint.com/v1
CUSTOM_MODEL=your-model-name
CUSTOM_TEMPERATURE=0.7
CUSTOM_MAX_TOKENS=2048

# ============================================================================
# Session Management Configuration
# ============================================================================

# Session Settings
# ----------------
SESSION_TIMEOUT_MINUTES=30
SESSION_MAX_QUERIES_PER_SESSION=100
SESSION_MAX_CONCURRENT_SESSIONS=10
SESSION_CLEANUP_INTERVAL_MINUTES=15

# Session Storage
# ---------------
# Options: sqlite, redis, memory
SESSION_STORAGE_BACKEND=sqlite
SESSION_DB_PATH=data/sessions/sessions.db

# ============================================================================
# Caching Configuration
# ============================================================================

# Cache Settings
# --------------
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=500

# Redis Cache (L1 - Fast, In-Memory)
# -----------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
# REDIS_URL=redis://localhost:6379/0  # Alternative: Full URL

# SQLite Cache (L2 - Persistent)
# -------------------------------
CACHE_DB_PATH=data/cache/cache.db

# ============================================================================
# Vector Database Configuration (Existing)
# ============================================================================

# Qdrant Vector Database
# -----------------------
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=reportalin_medical_records
QDRANT_USE_CLOUD=false

# Embedding Model Configuration
# ------------------------------
EMBEDDING_MODEL=cambridgeltl/BioLORD-2023-C
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=32

# ============================================================================
# De-identification Configuration (Existing)
# ============================================================================

# De-identification Settings
# ---------------------------
DEID_ENCRYPTION_KEY=
DEID_SALT=
DEID_MAPPING_DB_PATH=data/deid/mappings.db

# ============================================================================
# Logging Configuration (Existing)
# ============================================================================

# Logging Settings
# ----------------
LOG_LEVEL=INFO
LOG_DIR=.logs
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ============================================================================
# Application Configuration (Existing)
# ============================================================================

# Application Settings
# --------------------
APP_ENV=development
APP_DEBUG=false
APP_PORT=8000

# Data Directories
# ----------------
DATA_DIR=data
OUTPUT_DIR=output
TEMP_DIR=tmp

# ============================================================================
# Security & Privacy (Production)
# ============================================================================

# Security Settings
# -----------------
ENABLE_API_KEY_AUTH=false
API_KEY_HASH=
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Privacy Settings
# ----------------
ENABLE_AUDIT_LOG=true
AUDIT_LOG_PATH=.logs/audit.log
ENABLE_DATA_RETENTION_POLICY=true
DATA_RETENTION_DAYS=90

# ============================================================================
# Development & Testing (Optional)
# ============================================================================

# Development Settings
# --------------------
DEV_MODE=true
DEV_AUTO_RELOAD=true
DEV_MOCK_LLM=false

# Testing Settings
# ----------------
TEST_MODE=false
TEST_DATA_DIR=tests/data
TEST_OUTPUT_DIR=tests/output
